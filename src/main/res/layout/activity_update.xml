<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kanchankumari.contactinfo.Update">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="enter search item" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/but1"
        android:onClick="searchUp"
        android:layout_alignTop="@+id/tx1"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/tx2"
        android:layout_below="@+id/but1"
        android:layout_toStartOf="@+id/but1"
        android:layout_marginTop="63dp"
        android:hint="Email id" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/tx3"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/tx2"
        android:hint="Mobile No." />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/but2"
        android:layout_below="@+id/tx3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:textColor="#d70c20"
        android:onClick="updateItem" />
</RelativeLayout>
