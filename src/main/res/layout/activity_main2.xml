<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kanchankumari.contactinfo.Main2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ADD A NEW USER"
        android:id="@+id/a1"
        android:textColor="#0c4cd7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/e1"
        android:layout_below="@+id/a1"
        android:layout_alignStart="@+id/a1"
        android:layout_marginTop="34dp"
        android:hint="Enter Contact Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/e2"
        android:layout_below="@+id/e1"
        android:layout_alignStart="@+id/e1"
        android:layout_marginTop="38dp"
        android:hint="Enter the Mobile Number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/e3"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/e2"
        android:hint="Email Address" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/sv"
        android:layout_below="@+id/e3"
        android:textColor="#d70c20"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:onClick="save" />
</RelativeLayout>
